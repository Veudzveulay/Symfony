<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Ap</th>
      <th scope="col">Ad</th>
      <th scope="col">Mana</th>
      <th scope="col">Pv</th>
      <th scope="col">Supprimer</th>
      <th scope="col">Modifier</th>
    </tr>
  </thead>
{% for player in players %}

  <tbody>
    <tr>
      <th scope="row">{{player.id}}</th>
      <td>{{player.name}}</td>
      <td>{{player.ap}}</td>
      <td>{{player.ad}}</td>
      <td>{{player.mana}}</td>
      <td>{{player.pv}}</td>
      <td><a href="/player/delete/{{player.id}}" class="" role="button" aria-pressed="true"><i class="fas fa-trash"></i></a>
      <td><a href="/player/update/{{player.id}}" class="" role="button" aria-pressed="true"><i class="fas fa-pen"></i></a>
</td>
    </tr>
  </tbody>
  {% endfor %}
</table>



