{% extends 'base.html.twig' %}

    {% block body %}

        <style>
            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        </style>
        
        <div class="example-wrapper">
            <p>id: {{ pet.id }}</p>
            <p>Nom du pet: {{ pet.name }}</p>
            <p>Experience du pet: {{ pet.xp }}</p>
            <p>Niveau du pet: {{ pet.niveau }}</p>
            <p>Degats en ad du pet: {{ pet.ad }}</p>
            <p>Degats en ap du pet: {{ pet.ap }}</p>
            <p>Mana du pet: {{ pet.mana }}</p>
            <p>PV du pet: {{ pet.pv }}</p>
            <p>Propriétaire du pet: {{ pet.owner.name }}</p>
            <p>Propriétaire du pet: {{ pet.race.nom }}</p>

        </div>
    {% endblock %}